MainContainer:


<MainContainer>:
    orientation: "vertical"
    padding: "15dp", "15dp"
    spacing: "10dp"
    Label:
        text: "PasswordChecker"
        font_size: "40dp"
        size_hint: 1, 3
    TextInput:
        font_size: "30dp"
        size_hint: 0.5, 1
        pos_hint: {"center_x": 0.5}
        padding: "20dp", "20dp"
    Label:
        text: root.status_text
    Button:
        text: "Check"
        size_hint: 0.3, 1
        pos_hint: {"center_x": 0.5}
    Button:
        text: "info"
        size_hint: 0.3, 0.5
        pos_hint: {"center_x": 0.5}
